{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "ignore": [
            "./src/routeTree.gen.ts",
            "src/components/monaco/syntax/index.ts",
            "node_modules",
            "dist",
            "build",
            "pnpm-lock.yaml",
            "yarn.lock",
            "package-lock.json"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useKeyWithClickEvents": "off"
            },
            "complexity": {
                "noForEach": "off"
            }
        },
        "ignore": [
            "node_modules",
            "dist",
            "build",
            "pnpm-lock.yaml",
            "yarn.lock",
            "package-lock.json"
        ]
    }
}