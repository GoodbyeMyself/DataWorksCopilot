{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "env.d.ts",
    "sst-env.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022",
    ],
    "types": [
      "@remix-run/node",
      "vite/client",
      "node",
      "@types/wicg-file-system-access",
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    // Vite takes care of building everything, not tsc.
    "noEmit": true
  }
}