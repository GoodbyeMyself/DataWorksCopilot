{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".vercel"
  ],
  "compilerOptions": {
    "types": [
      "@vercel/remix",
      "@remix-run/node",
      "vite/client",
      "@types/wicg-file-system-access"
    ],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    /* strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    /* transpiling */
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "isolatedModules": true,
    /* where our code runs */
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ]
  }
}