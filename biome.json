{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "ignore": [
            "node_modules/**/*",
            "dist/**/*",
            ".sst/**/*",
            "pnpm-lock.yaml"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": [
            "node_modules/**/*",
            "dist/**/*",
            ".sst/**/*",
            "pnpm-lock.yaml"
        ]
    }
}